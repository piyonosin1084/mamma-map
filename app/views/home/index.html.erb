<div class="container">
  <!-- ヘッダー -->
  <header class="header">
    <h1>子連れにやさしいお店がすぐ見つかる！</h1>
  </header>

  <!-- 検索フォーム -->
  <div class="search-box">
    <h2>かんたん検索</h2>
    <form action="<%= stores_path %>" method="get">
      <div class="search-options">
        <label>
          <input type="radio" name="location" value="current"> 現在地
        </label>
        <label>
          <input type="radio" name="location" value="area"> エリア
        </label>
        <select name="area">
          <option value="">エリアを選択</option>
          <option value="東京">東京</option>
          <option value="大阪">大阪</option>
          <option value="名古屋">名古屋</option>
        </select>
      </div>

      <div class="genre-options">
        <label>ジャンル</label>
        <select name="genre">
          <option value="">ジャンルを選択</option>
          <option value="和食">和食</option>
          <option value="洋食">洋食</option>
          <option value="カフェ">カフェ</option>
        </select>
      </div>

      <button type="submit" class="btn search">検索</button>
    </form>
  </div>

  <!-- 店舗リスト -->
  <div class="store-list">
    <h3>子どもと一緒のお出かけをもっと楽しく</h3>
    <div class="stores">
      <% @stores.each do |store| %>
        <div class="store">
          <img src="<%= store.image_url || 'https://via.placeholder.com/150' %>" alt="店舗画像">
          <p><%= store.name %></p>
          <p><%= store.genre %></p>
        </div>
      <% end %>
    </div>
  </div>
