<h2>新規登録</h2>

<% if resource.errors.any? %>
  <div id="error_explanation" class="bg-red-500 text-white p-4 rounded mb-4">
    <h2><%= pluralize(resource.errors.count, "件のエラー") %>が発生しました：</h2>
    <ul class="list-disc pl-5">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
  <!--ユーザー名追加-->
  <div class="field">
    <%= f.label :"ユーザー名" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email, required: true %>
  </div>

  <div>
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.label :password_confirmation, "パスワード確認" %><br>
    <%= f.password_field :password_confirmation, required: true %>
  </div>

  <div>
    <%= f.submit "登録", class: "btn btn-success" %>
  </div>
<% end %>

<hr>

<p>すでにアカウントをお持ちの方は <%= link_to "こちら", new_user_session_path, class: "btn btn-primary" %></p>
